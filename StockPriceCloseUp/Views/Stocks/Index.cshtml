@{
    ViewData["Title"] = "Stock Lookup";
}

<h2>Stock Lookup</h2>

<form asp-controller="Stocks" asp-action="Lookup" method="post">
    <div>
        <label for="symbol">Enter Stock Symbol:</label>
        <input type="text" id="symbol" name="symbol" />
        <button type="submit">Get Price</button>
    </div>
</form>

@if (ViewBag.Price != null)
{
    <p>Price for @ViewBag.Symbol: $@ViewBag.Price</p>
}
