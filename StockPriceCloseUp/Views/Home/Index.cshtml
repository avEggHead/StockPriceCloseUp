@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center mt-5">
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <h2>Welcome back, @User.Identity.Name!</h2>
        <p class="lead">Ready to check stock prices?</p>
    }
    else
    {
        <h2>Welcome to <strong>Stock Price Close-Up</strong>!</h2>
        <p class="lead">Sign in or create an account to get started.</p>
        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary me-2">Login</a>
        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary me-2">Register</a>
    }
</div>
